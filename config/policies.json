{
  "policies": [
    {
      "handler": {
        "export": "ApiKeyInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "allowUnauthenticatedRequests": true,
          "cacheTtlSeconds": 60
        }
      },
      "name": "api-key-inbound",
      "policyType": "api-key-inbound"
    },
    {
      "handler": {
        "export": "RateLimitInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "rateLimitBy": "user",
          "requestsAllowed": 5,
          "timeWindowMinutes": 1
        }
      },
      "name": "rate-limit-inbound",
      "policyType": "rate-limit-inbound"
    },
    {
      "handler": {
        "export": "SetHeadersInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "headers": [
            {
              "name": "X-Zuplo-Secret-Key",
              "value": "$env(SECRET_KEY)"
            }
          ]
        }
      },
      "name": "set-secret-key-header",
      "policyType": "set-headers-inbound"
    },
    {
      "handler": {
        "export": "default",
        "module": "$import(./modules/set-profile-headers)"
      },
      "name": "set-profile-headers",
      "policyType": "custom-code-inbound"
    },
    {
      "handler": {
        "export": "SetHeadersInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "headers": [
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        }
      },
      "name": "set-application-json-content-type",
      "policyType": "set-headers-inbound"
    },
    {
      "handler": {
        "export": "ApiKeyInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "allowUnauthenticatedRequests": false,
          "cacheTtlSeconds": 60,
          "bucketName": "$env(ROTATION_BUCKET_NAME)"
        }
      },
      "name": "rotation-api-key-inbound",
      "policyType": "api-key-inbound"
    },
    {
      "handler": {
        "export": "RateLimitInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "rateLimitBy": "user",
          "requestsAllowed": 5,
          "timeWindowMinutes": 1
        }
      },
      "name": "rotation-rate-limit-inbound",
      "policyType": "rate-limit-inbound"
    },
    {
      "handler": {
        "export": "OpenIdJwtInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "audience": "$env(AUTH_AUDIENCE)",
          "issuer": "$env(AUTH_ISSUER)",
          "jwkUrl": "$env(JWKS_URL)",
          "allowUnauthenticatedRequests": true
        }
      },
      "name": "open-id-jwt-auth-inbound",
      "policyType": "open-id-jwt-auth-inbound"
    },
    {
      "handler": {
        "export": "default",
        "module": "$import(./modules/validate-authentication)"
      },
      "name": "validate-authentication",
      "policyType": "custom-code-inbound"
    },
    {
      "handler": {
        "export": "default",
        "module": "$import(./modules/validate-jwt-scopes)"
      },
      "name": "validate-jwt-scopes",
      "policyType": "custom-code-inbound"
    }
  ]
}